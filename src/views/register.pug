extends layout.pug
block content
  .container
    .row.justify-content-center
      .col-md-8
        if error
          .alert.alert-warning= error
        .card
          .card-header Registrar
          .card-body
            form.form-horizontal(method='post' action='/register')
              .mb-3
                label.form-label.control-label(for='name') nome
                input#name.form-control(type='text' name='name')
              .mb-3
                label.form-label.control-label(for='email') e-mail
                input#email.form-control(type='email' name='email')
              .mb-3
                label.form-label.control-label(for='password') senha
                input#password.form-control(type='password' name='password')
              .mb-3
                label.form-label.control-label(for='cpf') CPF
                input#cep.form-control(type='text' name='cpf')
              .mb-3
                label.form-label.control-label(for='birthday') Data de Nascimento
                input#birthday.form-control(type='text' name='birthday')
              .form-group
                label(for='gender') Genêro
                select#gender.form-control(name='gender')
                  option prefiro não informar
                  option feminino
                  option não-binário
                  option masculino
              .mb-3.py-3.justify-content-center
                button.btn.btn-primary.login-button(type='submit') registrar
                a(href='/login').ps-2 login
